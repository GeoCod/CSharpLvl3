<Window x:Class="testWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:testWPF"
        mc:Ignorable="d"
        Title="Тестовый клиент WPF" Height="150" Width="330" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*" MinWidth="150"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
            <TextBlock Text="Имя пользователя" Height="25" Margin="5" TextAlignment="Left"/>
            <TextBlock Text="Пароль" Height="25" Margin="5,0" TextAlignment="Left" />
        </StackPanel>
        <StackPanel Grid.Column="1">
            <TextBox x:Name ="UserNameEdit" Height="25" Margin="0,5,0,5"/>
            <PasswordBox Name="PasswordEdit" Height="25" Margin="0,0,0,5" Password="Password"/>
        </StackPanel>
        <Button Content="Отправить" Grid.Column="0" Grid.ColumnSpan="2" Height="35" Click="OnSendButtonClick" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
